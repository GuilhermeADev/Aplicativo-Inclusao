<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.FormChoice"
    android:background="@color/red2">

        <View
            android:id="@+id/containercomponentsmain"
            style="@style/ContainerComponentsMain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/logobox"
            style="@style/mainbox"
            app:layout_constraintTop_toTopOf="@id/containercomponentsmain"
            app:layout_constraintStart_toStartOf="@id/containercomponentsmain"
            app:layout_constraintEnd_toEndOf="@id/containercomponentsmain"
            />

        <ImageView
            android:id="@+id/logomain"
            android:layout_width="180dp"
            android:layout_height="145dp"
            android:src="@drawable/logo_cabi"
            app:layout_constraintTop_toTopOf="@id/logobox"
            app:layout_constraintStart_toStartOf="@id/logobox"
            app:layout_constraintEnd_toEndOf="@id/logobox"
            />

        <ImageView
            android:id="@+id/titulo"
            android:layout_width="230dp"
            android:layout_height="90dp"
            android:src="@drawable/titulo"
            app:layout_constraintEnd_toEndOf="@id/logobox"
            app:layout_constraintStart_toStartOf="@id/logobox"
            app:layout_constraintTop_toBottomOf="@id/logobox" />


        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button1"
            android:id="@+id/Button1"
            android:text="@string/text_login_cadastrar"
            app:layout_constraintEnd_toEndOf="@id/titulo"
            app:layout_constraintStart_toStartOf="@id/titulo"
            app:layout_constraintTop_toBottomOf="@id/titulo"

            />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button2"
            android:id="@+id/Button2"
            android:text="@string/text_entrar_convidado"
            app:layout_constraintEnd_toEndOf="@id/Button1"
            app:layout_constraintStart_toStartOf="@id/Button1"
            app:layout_constraintTop_toBottomOf="@id/Button1"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
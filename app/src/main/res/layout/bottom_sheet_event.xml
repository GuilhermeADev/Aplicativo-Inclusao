<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textSize="30dp"
        android:text="Evento" />

    <!-- Dois TextViews para exibir o conteúdo dentro do BottomSheetDialog -->

    <EditText
        android:id="@+id/nomeSugestevent"
        style="@style/edit_Text"
        android:hint="Titulo"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toTopOf="parent" />
55
    <EditText
        android:id="@+id/descSugestevent"
        style="@style/edit_Text"
        android:hint="Descrição"
        app:layout_constraintTop_toBottomOf="@id/nomeSugest"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_height="150dp"
        />
    <Button
        android:id="@+id/sendImage"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:text="Inserir imagem"
        android:background="@drawable/noborda"
        android:textSize="24dp"></Button>

    <Button
        android:id="@+id/submitevent"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enviar"
        android:textSize="20dp"
        android:layout_marginLeft="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descSugest" />

</LinearLayout>

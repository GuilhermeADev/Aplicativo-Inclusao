<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:elevation="10dp"
    tools:context=".Screens.Home"

    android:background="@drawable/background_menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>

        <LinearLayout

            android:id="@+id/linearLayout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView99"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_1_Noticias"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView99"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_noticias" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card2" style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView35"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_2_eventos"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView35"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_eventos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView72"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_3_matricula"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView72"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_matricula" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"

            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView50"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_3_sobre_nÃ³s"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView50"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/ic_sobre_nos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons"
                android:id="@+id/card5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView51"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_4_cursos"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView51"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_cursos" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView52"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_5_Sobre_Aee"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView52"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_aee" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:cardBackgroundColor="@color/transparent">


            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView53"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_6_projetos"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/imageView53"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="20dp"

                        app:srcCompat="@drawable/ic_projetos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView54"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_7_ouvidoria"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/imageView54"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_sugestoes" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imageView55"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_8_redes_sociais"
                        android:textSize="14sp"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/imageView55"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"

                        app:srcCompat="@drawable/ic_redes_sociais" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>


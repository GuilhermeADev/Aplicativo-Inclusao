<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:elevation="10dp"
    tools:context=".Screens.Activitys.Home"

    android:background="@drawable/background_menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>

        <LinearLayout

            android:id="@+id/linearLayout"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carousel">


            <androidx.cardview.widget.CardView
                android:id="@+id/ic_sobrenos"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_sobrenos"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_3_sobre_nÃ³s"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_sobrenos"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textAlignment="center"
                        app:srcCompat="@drawable/ic_sobre_nos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ic_redessociais"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_redessociais"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_8_redes_sociais"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/im_redessociais"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"

                        app:srcCompat="@drawable/ic_redes_sociais" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/background_menu_icons"
                android:id="@+id/ic_projetos"
                android:layout_marginLeft="10dp">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_projetos"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="@string/icone_6_projetos"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/im_projetos"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"

                        android:layout_marginTop="20dp"

                        app:srcCompat="@drawable/ic_projetos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"

            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:id="@+id/ic_cabi"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_cabi"
                        android:layout_centerHorizontal="true"
                        android:text="CABI"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_cabi"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/icone_cabi_menu" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ic_salasaee"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_salasaee"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="Salas de AEE"
                        android:textAlignment="center"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/im_salasaee"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_aee" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ic_noticias"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_noticias"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_1_Noticias"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_noticias"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_noticias" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:cardBackgroundColor="@color/transparent">

            <androidx.cardview.widget.CardView
                android:id="@+id/ic_eventos"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/StyleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_eventos"
                        android:layout_centerHorizontal="true"
                        android:text="@string/icone_2_eventos"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_eventos"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_eventos" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/ic_parcerias"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_parcerias"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="Parcerias"
                        android:textAlignment="center"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/im_parcerias"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_sugestoes" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/ic_faleconosco"
                style="@style/background_menu_icons">
                <include layout="@layout/background_layout"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/im_faleconosco"
                        android:layout_centerHorizontal="true"
                        style="@style/StyleText"
                        android:text="Fale conosco"
                        android:textSize="11sp"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/im_faleconosco"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"

                        app:srcCompat="@drawable/ic_fale_conosco" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>


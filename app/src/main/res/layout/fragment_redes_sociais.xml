<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screens.Redes_sociais"
    android:background="@drawable/background_menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textinstagram"
            style="@style/StyleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="INSTAGRAM"
            android:textColor="@color/white1"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@id/logoinstagram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logoinstagram"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/logoinstagram"
            app:layout_constraintStart_toStartOf="@+id/textinstagram"
            app:layout_constraintEnd_toEndOf="@+id/textinstagram"
            app:layout_constraintTop_toBottomOf="@id/textinstagram"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/textfacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FACEBOOK"
            android:textSize="22sp"
            style="@style/StyleText"
            android:textColor="@color/blue1"
            app:layout_constraintTop_toBottomOf="@+id/logoinstagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:id="@+id/logofacebook"
            android:layout_width="400px"
            android:layout_height="400px"
            android:src="@drawable/facebooklogo"
            app:layout_constraintTop_toBottomOf="@id/textfacebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textyoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUTUBE"
            style="@style/StyleText"
            android:textColor="@color/red1"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/logofacebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/logoyoutube"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/logoyoutube"
            app:layout_constraintTop_toBottomOf="@id/textyoutube"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
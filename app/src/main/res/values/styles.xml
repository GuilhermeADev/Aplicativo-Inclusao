<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Animação do dialog entrando -->

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
    <!-- Estilo para o BottomSheetDialog com bordas arredondadas -->
    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> 240dp </item>
        <item name="android:background">@drawable/container_components</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="ContainerComponentsCadastro">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> 380dp </item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="ContainerComponentsMain">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height"> 580dp </item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ContainerComponentsNoticias">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/containerBackground</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>


    </style>

    <style name="edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding"> 20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:maxLength">254</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="mainbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_marginLeft">130dp</item>
        <item name="android:layout_marginRight">130dp</item>
        <item name="android:layout_marginTop">85dp</item>
        <item name="android:background">@drawable/boxlogo</item>

    </style>

    <style name="Button1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">20dp</item>
    <item name="android:layout_marginRight">20dp</item>
    <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/white </item>
    <item name="android:padding">20dp</item>
    <item name="android:textColor">@color/red2</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item> </style>

    <style name="Button2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/buttons1_2</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShowText">
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StyleText">
        <item name="android:fontFamily">@font/public_sans_semibold</item>
        <item name="color">@color/black</item>
    </style>

    <style name="Texts_noticias">
        <item name="android:fontFamily">@font/timesbd</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="background_menu_icons">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="layout_constraintVertical_bias">0.5</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="cardBackgroundColor">@color/transparent</item>

    </style>


</resources>